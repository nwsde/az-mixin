{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "declaration": {
      "oneOf": [
        {
          "description": "Declare the az mixin without configuration",
          "type": "string",
          "enum": ["az"]
        },
        {"$ref": "#/definitions/config"}
      ]
    },
    "config": {
      "description": "Declare the az mixin with additional configuration",
      "type": "object",
      "properties": {
        "az": {
          "description": "az mixin configuration",
          "type": "object",
          "properties": {
            "clientVersion": {
              "description": "Version of az to install in the bundle",
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false,
      "required": ["az"]
    },
    "installStep": {
      "type": "object",
      "properties": {
        "az": {"$ref": "#/definitions/az"}
      },
      "required": [
        "az"
      ],
      "additionalProperties": false
    },
    "upgradeStep": {
      "type": "object",
      "properties": {
        "az": {"$ref": "#/definitions/az"}
      },
      "required": [
        "az"
      ],
      "additionalProperties": false
    },
    "invokeStep": {
      "type": "object",
      "properties": {
        "az": {"$ref": "#/definitions/az"}
      },
      "required": [
        "az"
      ],
      "additionalProperties": false
    },
    "uninstallStep": {
      "type": "object",
      "properties": {
        "az": {"$ref": "#/definitions/az"}
      },
      "required": [
        "az"
      ],
      "additionalProperties": false
    },
    "stepDescription": {
      "type": "string",
      "minLength": 1
    },
    "outputs": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "jsonPath": {
            "type": "string"
          },
          "path": {
            "type": "string"
          }
        },
        "additionalProperties": false,
        "required": [
          "name"
        ],
        "oneOf": [
          { "required": [ "jsonPath" ] },
          { "required": [ "path" ] }
        ]
      }
    },
    "az": {
      "type": "object",
      "properties": {
        "description": {
          "$ref": "#/definitions/stepDescription"
        },
        "arguments": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "flags": {
          "type": "object",
          "additionalProperties": {
            "type": ["null","boolean","number","string"]
          }
        },
        "outputs": {
          "$ref": "#/definitions/outputs"
        },
        "suppress-output": {
          "description": "Specifies that the output of the command should not be printed to the console",
          "type": "boolean"
        },
        "ignoreError": {
          "description": "Ignore the command's errors under certain conditions",
          "type": "object",
          "properties": {
            "all": {
              "description": "Ignore all errors",
              "type": "boolean"
            },
            "exitCodes": {
              "description": "Ignore errors when one of the following exit codes are returned",
              "type": "array",
              "items": {
                "type": "integer"
              }
            },
            "output": {
              "description": "Ignore errors when the command's stderr meets certain conditions",
              "type": "object",
              "properties": {
                "contains": {
                  "description": "Ignore errors when stderr contains any of the following strings",
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "regex": {
                  "description": "Ignore errors when stderr matches any of the following regular expressions",
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "group": {"$ref": "#/definitions/group"}
      },
      "additionalProperties": false
    },
    "group": {
      "description": "Manage a resource group",
      "type": "object",
      "properties": {
        "name": {
          "description": "Resource group name",
          "type": "string"
        },
        "location": {
          "description": "Resource group location",
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  },
  "type": "object",
  "properties": {
    "install": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/installStep"
      }
    },
    "upgrade": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/upgradeStep"
      }
    },
    "uninstall": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/uninstallStep"
      }
    },
    "mixins": {
      "type": "array",
      "items": { "$ref": "#/definitions/declaration" }
    }
  },
  "additionalProperties": {
    "type": "array",
    "items": {
      "$ref": "#/definitions/invokeStep"
    }
  }
}
